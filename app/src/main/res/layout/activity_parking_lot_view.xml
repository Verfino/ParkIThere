<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:background="@drawable/alert_bump">
    <!--
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    -->

    <TextView
        android:id="@+id/parking_view_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        style="@style/normalButton"
        android:gravity="center"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

    </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@id/parking_view_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/parking_view_name"
        app:layout_constraintTop_toBottomOf="@id/parking_view_name">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonView1"
                android:layout_marginStart="5dp"/>
            <Button
                android:id="@+id/buttonView2"
                android:layout_width="170dp"
                android:enabled="false"/>
            <Button android:id="@+id/buttonView3"
                android:layout_marginEnd="5dp"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buttonView4"
                android:layout_marginStart="5dp"/>
            <Button
                android:id="@+id/buttonView5"
                android:layout_width="170dp"
                android:enabled="false"/>
            <Button android:id="@+id/buttonView6"
                android:layout_marginEnd="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>