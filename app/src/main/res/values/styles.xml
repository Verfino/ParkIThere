<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="normalButton" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="parkingButton" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@drawable/parking_space_border</item>
        <item name="android:textSize">20dp</item>

    </style>
    <style name="parkingSpaceReserved" >
    <item name="android:textColor">@color/colorFont</item>
    <item name="android:background">@drawable/parking_space_border</item>
    <item name="android:textSize">20dp</item>

</style>
    <style name="parkingSpaceDisabled" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@drawable/parking_space_border</item>
        <item name="android:textSize">20dp</item>

    </style>
    <style name="parkingSpaceOccupied" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@drawable/parking_space_border</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="invertedButton" >
    <item name="android:textColor">@color/colorButtonBackground</item>
    <item name="android:background">@drawable/inverted_button</item>
    <item name="android:textSize">20dp</item>

    </style>

    <style name="greyButton" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@drawable/grey_button</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="label" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:textSize">30dp</item>

    </style>

    <style name="nameLogo" >
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">#07000000</item>
        <item name="android:textSize">56dp</item>
        <item name="android:textAlignment">center</item>
    </style>



    <style name="AppTheme.CustomTheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
